import java.util.*;
public class one{
public static void main(String[] args){
Scanner obj=new Scanner(System.in);
String a;
int n,i,j;
System.out.println("enter the no of rows:");
n=obj.nextInt();
for(i=1;i<n;i++){
for(j=1;j<i;j++){
System.out.print("* ");
}
System.out.println();
}
for(i=n;i>=1;i--){
for(j=i;j>1;j--){
System.out.print("* ");
}
System.out.println();
}
}
}
